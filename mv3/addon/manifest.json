{
  "manifest_version": 3,
  "name": "ipfs-companion-mv3",
  "version": "0.1",
  "description": "ipfs companion mv3",
  "background": {
    "service_worker": "main.js"
  },
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "default_ruleset_1",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  },
  "permissions": [
    "scripting",
    "tabs",
    "declarativeNetRequest",
    "declarativeNetRequestFeedback",
    "clipboardWrite",
    "notifications"],
  "host_permissions": [
    "https://*/",
    "http://*/"
  ],
  "icons": {
    "19": "icons/png/ipfs-logo-on_19.png",
    "38": "icons/png/ipfs-logo-on_38.png",
    "128": "icons/png/ipfs-logo-on_128.png"
  },
  "action": {
    "default_title": "IPFS Companion MV3",
    "default_icon": {
      "19": "icons/png/ipfs-logo-off_19.png",
      "38": "icons/png/ipfs-logo-off_38.png",
      "128": "icons/png/ipfs-logo-off_128.png"
    },
    "default_popup": "popup/index.html"
  },
  "options_ui": {
    "open_in_tab": true,
    "browser_style": false,
    "page": "options/options.html"
  },
  "web_accessible_resources": [{
    "resources": [
      "icons/ipfs-logo-on.svg",
      "icons/ipfs-logo-off.svg"
    ],
    "matches": ["<all_urls>"]
  }],
  "author": "Dave Justice",
  "homepage_url": "https://github.com/ipfs-companion/tree/mv3",
  "short_name": "IPFS mv3"
}
