{
  "name": "ipfs-firefox-addon",
  "homepage": "https://addons.mozilla.org/en-US/firefox/addon/ipfs-gateway-redirect/",
  "license": "CC0-1.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/lidel/ipfs-firefox-addon.git"
  },
  "scripts": {
    "start": "run-s clean build test firefox",
    "clean": "shx rm -f add-on/src/lib/npm/*.js build/*.zip",
    "build": "run-s clean build:*",
    "build:copy-is-ipfs-lib": "cp node_modules/is-ipfs/dist/index.min.js add-on/src/lib/npm/is-ipfs.min.js",
    "build:copy-ipfs-api-lib": "cp node_modules/ipfs-api/dist/index.min.js add-on/src/lib/npm/ipfs-api.min.js",
    "build:copy-lru-map-lib": "cp node_modules/lru_map/lru.js add-on/src/lib/npm/lru.js",
    "build:bundle-extension": "web-ext build -s add-on/ -a build/",
    "test": "run-s test:*",
    "test:unit": "cross-env NODE_ENV=test karma start",
    "test:functional": "mocha test/functional",
    "lint": "run-s lint:*",
    "lint:standard": "standard --fix -v \"add-on/src/**/*.js\" \"test/**/*.js\"",
    "lint:web-ext": "web-ext lint -s add-on/",
    "git:push": "run-s test git:commit",
    "git:commit": "run-s clean lint build",
    "firefox": "web-ext run -s add-on/ --browser-console"
  },
  "private": true,
  "preferGlobal": false,
  "pre-push": "git:push",
  "pre-commit": "git:commit",
  "standard": {
    "ignore": [
      "add-on/src/lib/npm/**"
    ]
  },
  "devDependencies": {
    "chai": "3.5.0",
    "cross-env": "3.1.4",
    "fakefile": "0.0.8",
    "fs-promise": "2.0.0",
    "fx-runner": "1.0.6",
    "geckodriver": "1.4.0",
    "karma": "1.4.1",
    "karma-chai": "0.1.0",
    "karma-coverage": "1.1.1",
    "karma-coveralls": "1.1.2",
    "karma-firefox-launcher": "1.0.0",
    "karma-mocha": "1.3.0",
    "karma-mocha-reporter": "2.2.2",
    "karma-sinon": "1.0.5",
    "mocha": "3.2.0",
    "npm-run-all": "4.0.1",
    "pre-commit": "1.2.2",
    "pre-push": "0.1.1",
    "selenium-webdriver": "3.1.0",
    "shx": "0.2.2",
    "sinon": "1.17.7",
    "sinon-chai": "2.8.0",
    "sinon-chrome": "2.1.2",
    "standard": "9.0.0-beta.0",
    "web-ext": "1.8.1"
  },
  "dependencies": {
    "ipfs-api": "12.1.7",
    "is-ipfs": "0.3.0",
    "lru_map": "0.3.2"
  }
}
