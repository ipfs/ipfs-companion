{
  "name": "ipfs-firefox-addon",
  "title": "IPFS Gateway Redirect",
  "id": "ipfs-firefox-addon@lidel.org",
  "description": "Access IPFS resources via custom HTTP2IPFS gateway",
  "author": "Marcin Rataj",
  "version": "1.6.0",
  "license": "CC0-1.0",
  "homepage": "https://github.com/lidel/ipfs-firefox-addon",
  "icon": "resource://ipfs-firefox-addon-at-lidel-dot-org/data/ipfs-logo-on.svg",
  "main": "lib/main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/lidel/ipfs-firefox-addon.git"
  },
  "preferences": [
    {
      "name": "useCustomGateway",
      "title": "Use Custom Gateway",
      "type": "bool",
      "value": true
    },
    {
      "name": "automatic",
      "title": "Automatic Mode",
      "type": "bool",
      "value": false
    },
    {
      "name": "publicGatewayHosts",
      "title": "List of public gateways",
      "type": "string",
      "value": "ipfs.io gateway.ipfs.io ipfs.pics"
    },
    {
      "name": "customGatewayHost",
      "title": "Custom IPFS Gateway Address",
      "type": "string",
      "value": "127.0.0.1"
    },
    {
      "name": "customGatewayPort",
      "title": "Custom IPFS Gateway Port",
      "type": "integer",
      "value": 8080
    },
    {
      "name": "customApiPort",
      "title": "Custom IPFS API Port",
      "type": "integer",
      "value": 5001
    },
    {
      "name": "apiPollInterval",
      "title": "API Poll Interval",
      "type": "integer",
      "value": 3000
    },
    {
      "name": "dns",
      "title": "Enable DNS Lookup",
      "type": "bool",
      "value": false
    },
    {
      "name": "linkify",
      "title": "Extended IPFS Link Support",
      "type": "bool",
      "value": false
    },
    {
      "name": "fsUris",
      "title": "Keep fs: in the address bar",
      "type": "bool",
      "value": false
    }
  ],
  "permissions": {
    "private-browsing": true,
    "multiprocess": true
  },
  "engines": {
    "firefox": ">= 51.0a1"
  },
  "hasEmbeddedWebExtension": true,
  "scripts": {
    "build": "standard --fix webextension/*.js lib/*.js && browserify -r is-ipfs --no-builtins -s module.exports > lib/npm/is-ipfs.js",
    "jpm_test": "grunt run:jpm_test",
    "eslint": "grunt run:eslint",
    "xpi": "jpm xpi",
    "test": "npm run -s build && grunt test"
  },
  "pre-commit": [
    "build"
  ],
  "pre-push": [
    "test"
  ],
  "jetpack": {
    "overrides": {
      "buffer": "sdk/io/buffer"
    }
  },
  "standard": {
    "ignore": [
      "lib/npm/**"
    ]
  },
  "devDependencies": {
    "browserify": "13.3.0",
    "eslint": "3.14.0",
    "eslint-config-standard": "6.2.1",
    "eslint-plugin-promise": "3.4.0",
    "eslint-plugin-standard": "2.0.1",
    "grunt": "1.0.1",
    "grunt-run": "0.6.0",
    "jpm": "1.2.2",
    "load-grunt-tasks": "3.5.0",
    "pre-commit": "1.1.3",
    "pre-push": "0.1.1",
    "standard": "8.6.0"
  },
  "dependencies": {
    "is-ipfs": "0.2.1"
  }
}
